@model Personel
@{
    ViewBag.Title = "Personel Düzenle";
}
<h4>Personel Düzenle</h4>
@using (Html.BeginForm("PersonelDuzenle", "Personel", FormMethod.Post, new {enctype= "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.PersonelID)
    <div>
        <label for="PersonelAd" class="font-weight-bolder">Adı:</label>
        @Html.TextBoxFor(model => model.PersonelAd, new { @class = "form-control" })
    </div>
    <div>
        <label for="PersonelSoyad" class="font-weight-bolder mt-2">Soyadı:</label>
        @Html.TextBoxFor(model => model.PersonelSoyad, new { @class = "form-control" })
    </div>
    <div>
        <label for="PersonelResim" class="font-weight-bolder mt-2">Mevcut Resim:</label>
        <img src="@Model.PersonelResim" style="width:64px;height:64px;" alt="Personel" class="img-circle img-fluid mt-2">
        @*@Html.TextBoxFor(model => model.PersonelResim, new { @class = "form-control" })*@
        <input type="file" name="PersonelResim" />
    </div>
    <div>
        <label for="Departman" class="font-weight-bolder mt-2">Departman:</label>
        @Html.DropDownListFor(model => model.DepartmanID, (List<SelectListItem>)ViewBag.PersonelDepartman, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-outline-success mt-2">Güncelle</button>
}
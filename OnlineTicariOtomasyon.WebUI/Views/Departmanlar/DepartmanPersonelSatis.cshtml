@model List<SatisHareket>
@{
    ViewBag.Title = "Departman Personel Satış";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"><h5>Personel: @ViewBag.Personel</h5></li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Müşteri</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (SatisHareket satis in Model)
    {
        <tr>
            <td>@satis.SatisHareketID</td>
            <td>@satis.Urun.UrunAd</td>
            <td>@satis.Cari.CariAd @satis.Cari.CariSoyad</td>
            <td>@satis.Adet</td>
            <td>@satis.Fiyat₺</td>
            <td>@satis.ToplamTutar₺</td>
            <td>@satis.Tarih.ToString("dd/MMMM/yyyy")</td>
            <td><a href="#" class="btn btn-dark">Yazdır</a></td>
        </tr>
    }
</table>
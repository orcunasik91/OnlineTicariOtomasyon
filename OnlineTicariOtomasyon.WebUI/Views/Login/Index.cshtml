
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Giriş Paneli - Ticari Otomasyon</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Ticari Otomasyon, Online Ticari Otomasyon, MVC, Asp.Net" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <!-- Google fonts -->
    <!-- css files -->
    <link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->
    <link rel="stylesheet" href="~/weblogin/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->
    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" /> <!-- popup box css -->
</head>
<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">Online Ticari Otomasyon</a>
            </div>
            <div class="social">
                <ul>
                    <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                    <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                    <li><a href="#"><span class="fa fa-linkedin"></span></a></li>
                    <li><a href="#"><span class="fa fa-google-plus"></span></a></li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>Demo Proje</p>
                    <h1>Kullanılan Teknoloji: </h1> <h2>Asp.Net Mvc5-EF-Code First</h2>
                    <p>
                        Bu proje bir mağazanın vitrin, admin ve kullanıcı olmak üzere 3 temel panelinden oluşuyor. Özellikle admin panelinin dashboard kısmı ile hem tasarımı güçlü bir arayüz hem de crud işlemlerinin ötesinde Entity Framework, Linq sorgular üzerinden Trigger, Procedure gibi SQL yapıları ile somut bir projedir.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="#">Hizmetlerimiz</a></li>
                            <li><a class="read" href="#">Referanslarımız</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Kayıt Formu »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Müşteri Giriş »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Personel Girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2024 Online Ticari Otomasyon. Tüm Hakları Saklandı | Powered by <a href="https://github.com/orcunasik91/" target="_blank">Orçun Aşık</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">
            @Html.Partial("CariGiris")
        </div>
    </div>
    <!-- //login form popup-->
    <!-- subscribe form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Giriş Formu</h3>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="#" method="post">
                            <input type="text" class="name" name="KullaniciAd" Placeholder="deneme91" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="********" required="" />
                            <input type="submit" value="Oturum Aç">
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //subscribe form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">
            @Html.Action("KayitFormu", "Login")
        </div>
    </div>
    <!-- //register form popup-->
    <!-- js -->
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>
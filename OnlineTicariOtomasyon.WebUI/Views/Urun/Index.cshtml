@model List<Urun>
@{
    ViewBag.Title = "Ürünler";
}
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <div>
        <a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün</a>
        <p class="mt-2 font-weight-bold">
            Arama: @Html.TextBox("urun")
            <input type="submit" value="Ara" class="col-sm-2" />
        </p>
    </div>
}
<div>
    <table class="table table-bordered mt-1">
        <tr>
            <th>#</th>
            <th>Ürün</th>
            <th>Kategori</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Sil</th>
            <th>Düzenle</th>
            <th>Satış Yap</th>
        </tr>
        @{
            int i = 1;
            foreach (Urun urun in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@urun.UrunAd</td>
                    <td>@urun.Kategori.KategoriAd</td>
                    <td>@urun.Marka</td>
                    <td>@urun.Stok</td>
                    <td>@urun.AlisFiyati</td>
                    <td>@urun.SatisFiyati</td>
                    <td><a href="/Urun/UrunSil/@urun.UrunID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Urun/UrunGetir/@urun.UrunID" class="btn btn-warning">Düzenle</a></td>
                    <td><a href="/Urun/SatisYap/@urun.UrunID" class="btn btn-success">Sat</a></td>
                </tr>
                i++;
            }
        }
    </table>
</div>


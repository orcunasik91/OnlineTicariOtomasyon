@model Urun
@{
    ViewBag.Title = "Yeni Ürün";
}
<h2>Yeni Ürün</h2>
<form method="post" class="form-group">
    <label for="UrunAd" class="mb-1 font-weight-bold">Ürün:</label>
    <input type="text" autofocus id="UrunAd" name="UrunAd" class="form-control mb-2" />
    <label for="Kategori" class="font-weight-bold">Kategori: </label>
    @Html.DropDownListFor(u => u.KategoriID, (List<SelectListItem>)ViewBag.UrunKategori, new { @class = "form-control" })
    <label for="Marka" class="font-weight-bold">Marka:</label>
    <input type="text" id="Marka" name="Marka" class="form-control mb-2" />
    <label for="Stok" class="font-weight-bold">Stok:</label>
    <input type="number" id="Stok" name="Stok" class="form-control mb-2" />
    <label for="AlisFiyati" class="font-weight-bold">Alış Fiyatı:</label>
    <input type="text" id="AlisFiyati" name="AlisFiyati" class="form-control mb-2" />
    <label for="SatisFiyati" class="font-weight-bold">Satış Fiyatı:</label>
    <input type="text" id="SatisFiyati" name="SatisFiyati" class="form-control mb-2" />
    <label for="UrunGorsel" class="font-weight-bold">Ürün Görsel:</label>
    <input type="text" id="UrunGorsel" name="UrunGorsel" class="form-control mb-2" />
    <button class="btn btn-outline-success">Kaydet</button>
</form>
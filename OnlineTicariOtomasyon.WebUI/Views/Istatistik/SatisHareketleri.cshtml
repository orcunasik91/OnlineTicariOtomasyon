@model List<SatisHareket>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Satış Hareketleri</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tarih</th>
                            <th>Müşteri</th>
                            <th>Ürün</th>
                            <th>Marka</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam Tutar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (SatisHareket satis in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@satis.Tarih.ToString("dd-MMMM-yyyy")</td>
                                    <td>@satis.Cari.CariAd @satis.Cari.CariSoyad</td>
                                    <td>@satis.Urun.UrunAd</td>
                                    <td>@satis.Urun.Marka</td>
                                    <td>@satis.Adet</td>
                                    <td>@satis.Fiyat₺</td>
                                    <td>@(satis.Adet * satis.Fiyat)₺</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>